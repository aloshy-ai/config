{ options, config, pkgs, lib, systems, name, format, ... }:

with lib;
let
  cfg = config.plusultra.services.openssh;
  defaultKey =
    "ssh-rsa ";
  otherHosts = lib.filterAttrs (key: host: key != name && (host.config.plusultra.user.name or null) != null) systems;
  otherHostsConfig = lib.concatMapStringsSep
    "\n"
    (name:
      let host = systems.${name}; in
      ''
        Host ${name}
          User ${config.plusultra.user.name}
      ''
    )
    (builtins.attrNames systems);
in
{
  options.plusultra.services.openssh = with types; {
    enable = mkBoolOpt false "Whether or not to configure OpenSSH support.";
    authorizedKeys =
      mkOpt (listOf str) [ defaultKey ] "The public keys to apply.";
  };

  config = mkIf cfg.enable {
    services.openssh = {
      enable = true;
      passwordAuthentication = false;
      permitRootLogin = if format == "install-iso" then "yes" else "no";
    };

    programs.ssh.extraConfig = ''
      Host *
        HostKeyAlgorithms +ssh-rsa

      ${otherHostsConfig}
    '';

    plusultra.user.extraOptions.openssh.authorizedKeys.keys =
      cfg.authorizedKeys;
  };
}
